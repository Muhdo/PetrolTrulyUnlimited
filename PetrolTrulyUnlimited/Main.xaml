                <Label x:Name="Lbl_Vehicle_Fuel" Grid.Row="3" Grid.Column="1" FontSize="14" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="0"  Margin="5,2.5"/>
                <Label Grid.Row="4" Grid.Column="0" Content="Time before leaving: " FontSize="14" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Padding="0"  Margin="5,2.5"/>
                <Label x:Name="Lbl_Vehicle_Time" Grid.Row="4" Grid.Column="1" FontSize="14" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="0"  Margin="5"/>
            </Grid>
        </Popup>

