            <ColumnDefinition Width="1*" MinWidth="185" MaxWidth="300"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*" MinWidth="215" MaxWidth="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Queue-->
