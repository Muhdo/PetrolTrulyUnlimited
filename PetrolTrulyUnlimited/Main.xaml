                <Label x:Name="Lbl_Vehicle_Capacity" Grid.Row="1" Grid.Column="1" FontSize="14" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="0"  Margin="5,2.5"/>
